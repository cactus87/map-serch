<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:LmpLink.MAUI.Converters">

    <!-- Converters -->
    <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    
    <!-- Custom Converter: Check if value is not null -->
    <converters:IsNotNullConverter x:Key="IsNotNullConverter" />

    <!-- Custom Converter: Person Type to Korean -->
    <converters:PersonTypeToKoreanConverter x:Key="PersonTypeToKoreanConverter" />

</ResourceDictionary>
