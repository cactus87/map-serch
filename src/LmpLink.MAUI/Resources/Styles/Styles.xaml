<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- =========================== -->
    <!-- Typography Styles (Dark Theme) -->
    <!-- =========================== -->

    <!-- Display: Logo, Modal Titles -->
    <Style x:Key="DisplayText" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Heading 1: Page Sections -->
    <Style x:Key="Heading1" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Heading 2: Card Titles -->
    <Style x:Key="Heading2" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Body: Main Content -->
    <Style x:Key="BodyText" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Small: Metadata -->
    <Style x:Key="SmallText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <!-- Caption: Hints -->
    <Style x:Key="CaptionText" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
    </Style>

    <!-- =========================== -->
    <!-- Button Styles (Dark Theme) -->
    <!-- =========================== -->

    <!-- Primary CTA Button: AI Button, Main Actions -->
    <Style x:Key="PrimaryCTAButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryCTA}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Padding" Value="16,12" />
    </Style>

    <!-- Secondary Button: Filters, Additional Actions -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDarkGray}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="BorderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <!-- Pill Button: Quick Actions in List Items -->
    <Style x:Key="PillButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HeightRequest" Value="36" />
        <Setter Property="Padding" Value="16,8" />
    </Style>

    <!-- =========================== -->
    <!-- Default Styles (Dark Theme) -->
    <!-- =========================== -->

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource PrimaryCTA}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryCTA}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

</ResourceDictionary>

