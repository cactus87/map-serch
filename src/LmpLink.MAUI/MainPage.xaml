<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LmpLink.MAUI.ViewModels"
             xmlns:models="clr-namespace:LmpLink.MAUI.Models"
             x:Class="LmpLink.MAUI.MainPage"
             x:DataType="vm:MapViewModel"
             Title="LMP-Link MVP"
             BackgroundColor="{StaticResource BackgroundDeepNavy}">

    <Grid ColumnDefinitions="3*,7*">
        
        <!-- Left Panel (30%): User List & Controls -->
        <Grid Grid.Column="0" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*" Padding="10" BackgroundColor="{StaticResource SurfaceDarkGray}">
            
            <!-- Title -->
            <Label 
                Grid.Row="0"
                Text="LMP-Link MVP"
                Style="{StaticResource Heading1}"
                TextColor="{StaticResource PrimaryCTA}"
                Margin="0,10,0,10" />

            <!-- Center Mode Toggle -->
            <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,0,0,10">
                <Button 
                    Grid.Column="0"
                    Text="이용자 중심"
                    Command="{Binding ToggleCenterModeCommand}"
                    BackgroundColor="{Binding CurrentCenterMode, Converter={StaticResource CenterModeToColorConverter}, ConverterParameter=User}"
                    TextColor="White"
                    FontSize="14"
                    Padding="10,8" />
                <Button 
                    Grid.Column="1"
                    Text="지원사 중심"
                    Command="{Binding ToggleCenterModeCommand}"
                    BackgroundColor="{Binding CurrentCenterMode, Converter={StaticResource CenterModeToColorConverter}, ConverterParameter=Assistant}"
                    TextColor="White"
                    FontSize="14"
                    Padding="10,8" />
            </Grid>

            <!-- Radius Filter Buttons -->
            <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,0,0,10">
                <Label 
                    Text="반경 필터"
                    Style="{StaticResource SmallText}"
                    FontAttributes="Bold" />
                
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                    <Button 
                        Grid.Row="0" Grid.Column="0"
                        Text="1km"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ChangeRadiusCommand}">
                        <Button.CommandParameter>
                            <x:Double>1.0</x:Double>
                        </Button.CommandParameter>
                    </Button>
                    <Button 
                        Grid.Row="0" Grid.Column="1"
                        Text="3km"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ChangeRadiusCommand}">
                        <Button.CommandParameter>
                            <x:Double>3.0</x:Double>
                        </Button.CommandParameter>
                    </Button>
                    <Button 
                        Grid.Row="1" Grid.Column="0"
                        Text="5km"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ChangeRadiusCommand}">
                        <Button.CommandParameter>
                            <x:Double>5.0</x:Double>
                        </Button.CommandParameter>
                    </Button>
                    <Button 
                        Grid.Row="1" Grid.Column="1"
                        Text="전체"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ShowAllCommand}" />
                </Grid>
            </VerticalStackLayout>

            <!-- Filter Status -->
            <Frame 
                Grid.Row="3"
                BackgroundColor="{StaticResource PrimaryCTA}"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10"
                BorderColor="Transparent">
                <Label
                    Text="{Binding FilterStatusText}"
                    Style="{StaticResource BodyText}"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center" />
            </Frame>

            <!-- Users CollectionView -->
            <CollectionView
                Grid.Row="4"
                ItemsSource="{Binding Users}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedUser}"
                BackgroundColor="{StaticResource BackgroundDeepNavy}"
                HeightRequest="200">
                <CollectionView.Header>
                    <Label 
                        Text="이용자 목록 (10명)"
                        Style="{StaticResource SmallText}"
                        FontAttributes="Bold"
                        Padding="10,10,10,5" />
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Person">
                        <Frame 
                            Padding="12"
                            Margin="5,4"
                            CornerRadius="8"
                            BorderColor="{StaticResource TextTertiary}"
                            BackgroundColor="{StaticResource SurfaceDarkGray}"
                            HasShadow="True">
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*">
                                <!-- Blue Circle Icon (User Marker) -->
                                <BoxView 
                                    Grid.Row="0" Grid.Column="0"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    CornerRadius="8"
                                    Color="{StaticResource UserMarker}"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0" />
                                
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Spacing="4">
                                    <Label 
                                        Text="{Binding Name}"
                                        Style="{StaticResource Heading2}"
                                        FontSize="16" />
                                    <Label 
                                        Text="{Binding Address}"
                                        Style="{StaticResource SmallText}"
                                        FontSize="12" />
                                    <Label 
                                        Text="{Binding Phone}"
                                        Style="{StaticResource CaptionText}"
                                        IsVisible="{Binding Phone, Converter={StaticResource IsNotNullConverter}}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Assistants CollectionView -->
            <CollectionView
                Grid.Row="5"
                ItemsSource="{Binding FilteredAssistants}"
                BackgroundColor="{StaticResource BackgroundDeepNavy}">
                <CollectionView.Header>
                    <Label 
                        Text="{Binding FilteredAssistants.Count, StringFormat='활동지원사 목록 ({0}명)'}"
                        Style="{StaticResource SmallText}"
                        FontAttributes="Bold"
                        Padding="10,10,10,5" />
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Person">
                        <Frame 
                            Padding="12"
                            Margin="5,4"
                            CornerRadius="8"
                            BorderColor="{StaticResource TextTertiary}"
                            BackgroundColor="{StaticResource SurfaceDarkGray}"
                            HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MapViewModel}}, Path=SelectAssistantCommand}"
                                    CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                                <!-- Orange Square Icon (Assistant Marker) -->
                                <BoxView 
                                    Grid.Row="0" Grid.Column="0"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    Color="{StaticResource AssistantMarker}"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0" />
                                
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Spacing="4">
                                    <Label 
                                        Text="{Binding Name}"
                                        Style="{StaticResource Heading2}"
                                        FontSize="16" />
                                    <Label 
                                        Text="{Binding Address}"
                                        Style="{StaticResource SmallText}"
                                        FontSize="12" />
                                    <Label 
                                        Text="{Binding Phone}"
                                        Style="{StaticResource CaptionText}"
                                        IsVisible="{Binding Phone, Converter={StaticResource IsNotNullConverter}}" />
                                </VerticalStackLayout>

                                <!-- Distance (if filtered) -->
                                <Label 
                                    Grid.Row="0" Grid.Column="2"
                                    Text="{Binding DistanceKm, StringFormat='{0:F1}km'}"
                                    Style="{StaticResource CaptionText}"
                                    FontAttributes="Bold"
                                    TextColor="{StaticResource PrimaryCTA}"
                                    VerticalOptions="Center"
                                    IsVisible="{Binding DistanceKm, Converter={StaticResource IsNotNullConverter}}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label 
                        Text="이용자를 선택하고 반경을 설정하세요"
                        Style="{StaticResource SmallText}"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="20" />
                </CollectionView.EmptyView>
            </CollectionView>

        </Grid>

        <!-- Right Panel (70%): Map WebView -->
        <Grid Grid.Column="1" BackgroundColor="{StaticResource BackgroundDeepNavy}">
            <WebView 
                x:Name="MapWebView"
                BackgroundColor="{StaticResource SurfaceDarkGray}"
                Source="map.html" />

            <!-- Info Overlay (Right Bottom) -->
            <Frame 
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                Padding="15"
                BackgroundColor="#CC000000"
                CornerRadius="8"
                BorderColor="Transparent"
                HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label 
                        Text="{Binding CurrentCenterMode, StringFormat='모드: {0}'}" 
                        Style="{StaticResource SmallText}" 
                        FontAttributes="Bold"
                        TextColor="White" />
                    <Label 
                        Text="{Binding CurrentRadius, StringFormat='반경: {0}km'}" 
                        Style="{StaticResource SmallText}" 
                        TextColor="#CCCCCC" />
                    <BoxView HeightRequest="1" Color="#444444" Margin="0,5" />
                    <Label 
                        Text="{Binding UsersInRadius, StringFormat='이용자: {0}명'}" 
                        Style="{StaticResource SmallText}" 
                        TextColor="#3B82F6" />
                    <Label 
                        Text="{Binding AssistantsInRadius, StringFormat='지원사: {0}명'}" 
                        Style="{StaticResource SmallText}" 
                        TextColor="#F97316" />
                </VerticalStackLayout>
            </Frame>

            <!-- Loading Overlay -->
            <ActivityIndicator
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                Color="{StaticResource PrimaryCTA}"
                WidthRequest="50"
                HeightRequest="50"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Grid>

    </Grid>

</ContentPage>
