<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LmpLink.MAUI.ViewModels"
             xmlns:models="clr-namespace:LmpLink.MAUI.Models"
             x:Class="LmpLink.MAUI.MainPage"
             x:DataType="vm:MapViewModel"
             Title="LMP-Link MVP"
             BackgroundColor="{StaticResource BackgroundDeepNavy}">

    <Grid ColumnDefinitions="3*,7*">
        
        <!-- Left Panel (30%): User List & Controls -->
        <Grid Grid.Column="0" RowDefinitions="Auto,Auto,Auto,*" Padding="10" BackgroundColor="{StaticResource SurfaceDarkGray}">
            
            <!-- Title -->
            <Label 
                Grid.Row="0"
                Text="LMP-Link MVP"
                Style="{StaticResource Heading1}"
                TextColor="{StaticResource PrimaryCTA}"
                Margin="0,10,0,10" />

            <!-- Radius Filter Buttons -->
            <VerticalStackLayout Grid.Row="1" Spacing="10" Margin="0,0,0,10">
                <Label 
                    Text="반경 필터"
                    Style="{StaticResource SmallText}"
                    FontAttributes="Bold" />
                
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                    <Button 
                        Grid.Row="0" Grid.Column="0"
                        Text="1km"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ChangeRadiusCommand}"
                        CommandParameter="1.0" />
                    <Button 
                        Grid.Row="0" Grid.Column="1"
                        Text="3km"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ChangeRadiusCommand}"
                        CommandParameter="3.0" />
                    <Button 
                        Grid.Row="1" Grid.Column="0"
                        Text="5km"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ChangeRadiusCommand}"
                        CommandParameter="5.0" />
                    <Button 
                        Grid.Row="1" Grid.Column="1"
                        Text="전체"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ShowAllCommand}" />
                </Grid>
            </VerticalStackLayout>

            <!-- Filter Status -->
            <Frame 
                Grid.Row="2"
                BackgroundColor="{StaticResource PrimaryCTA}"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10"
                BorderColor="Transparent">
                <Label
                    Text="{Binding FilterStatusText}"
                    Style="{StaticResource BodyText}"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center" />
            </Frame>

            <!-- Users CollectionView -->
            <CollectionView
                Grid.Row="3"
                ItemsSource="{Binding Users}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedUser}"
                BackgroundColor="{StaticResource BackgroundDeepNavy}">
                <CollectionView.Header>
                    <Label 
                        Text="이용자 목록"
                        Style="{StaticResource SmallText}"
                        FontAttributes="Bold"
                        Padding="10,10,10,5" />
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Person">
                        <Frame 
                            Padding="12"
                            Margin="5,4"
                            CornerRadius="8"
                            BorderColor="{StaticResource TextTertiary}"
                            BackgroundColor="{StaticResource SurfaceDarkGray}"
                            HasShadow="True">
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*">
                                <!-- Blue Circle Icon (User Marker) -->
                                <BoxView 
                                    Grid.Row="0" Grid.Column="0"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    CornerRadius="8"
                                    Color="{StaticResource UserMarker}"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0" />
                                
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Spacing="4">
                                    <Label 
                                        Text="{Binding Name}"
                                        Style="{StaticResource Heading2}"
                                        FontSize="16" />
                                    <Label 
                                        Text="{Binding Address}"
                                        Style="{StaticResource SmallText}"
                                        FontSize="12" />
                                    <Label 
                                        Text="{Binding Phone}"
                                        Style="{StaticResource CaptionText}"
                                        IsVisible="{Binding Phone, Converter={StaticResource IsNotNullConverter}}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>

        <!-- Right Panel (70%): Map WebView -->
        <Grid Grid.Column="1" BackgroundColor="{StaticResource BackgroundDeepNavy}">
            <WebView 
                x:Name="MapWebView"
                BackgroundColor="{StaticResource SurfaceDarkGray}">
                <WebView.Source>
                    <HtmlWebViewSource>
                        <HtmlWebViewSource.Html>
                            <![CDATA[
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Simple Test</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            background-color: #1a1a2e;
            color: white;
            font-family: Arial, sans-serif;
        }
        h1 { color: #3B82F6; }
    </style>
</head>
<body>
    <h1>WebView Test - Success!</h1>
    <p>If you see this, WebView2 is working correctly.</p>
    <button onclick="alert('JavaScript works!')">Test JavaScript</button>
</body>
</html>
                            ]]>
                        </HtmlWebViewSource.Html>
                    </HtmlWebViewSource>
                </WebView.Source>
            </WebView>

            <!-- Loading Overlay -->
            <ActivityIndicator
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                Color="{StaticResource PrimaryCTA}"
                WidthRequest="50"
                HeightRequest="50"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Grid>

    </Grid>

</ContentPage>

