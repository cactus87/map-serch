<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LmpLink.MAUI.ViewModels"
             xmlns:models="clr-namespace:LmpLink.MAUI.Models"
             xmlns:pages="clr-namespace:LmpLink.MAUI.Views.Pages"
             x:Class="LmpLink.MAUI.Views.Pages.MapPage"
             x:DataType="vm:MapViewModel"
             Title="지도"
             BackgroundColor="{StaticResource BackgroundDeepNavy}">

    <Grid ColumnDefinitions="3*,7*">
        
        <!-- Left Panel (30%): User List & Controls -->
        <Grid Grid.Column="0" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*" Padding="10" BackgroundColor="{StaticResource SurfaceDarkGray}">
            
            <!-- Title -->
            <Label 
                Grid.Row="0"
                Text="LMP-Link MVP"
                Style="{StaticResource Heading1}"
                TextColor="{StaticResource PrimaryCTA}"
                Margin="0,10,0,10" />

            <!-- Center Mode Toggle -->
            <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,0,0,10">
                <Button 
                    Grid.Column="0"
                    Text="이용자 중심"
                    Command="{Binding ToggleCenterModeCommand}"
                    BackgroundColor="{Binding CurrentCenterMode, Converter={StaticResource CenterModeToColorConverter}, ConverterParameter=User}"
                    TextColor="White"
                    FontSize="14"
                    Padding="10,8" />
                <Button 
                    Grid.Column="1"
                    Text="지원사 중심"
                    Command="{Binding ToggleCenterModeCommand}"
                    BackgroundColor="{Binding CurrentCenterMode, Converter={StaticResource CenterModeToColorConverter}, ConverterParameter=Assistant}"
                    TextColor="White"
                    FontSize="14"
                    Padding="10,8" />
            </Grid>

            <!-- Radius Filter Buttons -->
            <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,0,0,10">
                <Label 
                    Text="반경 필터"
                    Style="{StaticResource SmallText}"
                    FontAttributes="Bold" />
                
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                    <Button 
                        Grid.Row="0" Grid.Column="0"
                        Text="1km"
                        Command="{Binding ChangeRadiusCommand}"
                        BackgroundColor="{Binding CurrentRadius, Converter={StaticResource RadiusToColorConverter}, ConverterParameter=1}"
                        TextColor="White"
                        FontSize="14"
                        Padding="10,8">
                        <Button.CommandParameter>
                            <x:Double>1.0</x:Double>
                        </Button.CommandParameter>
                    </Button>
                    <Button 
                        Grid.Row="0" Grid.Column="1"
                        Text="3km"
                        Command="{Binding ChangeRadiusCommand}"
                        BackgroundColor="{Binding CurrentRadius, Converter={StaticResource RadiusToColorConverter}, ConverterParameter=3}"
                        TextColor="White"
                        FontSize="14"
                        Padding="10,8">
                        <Button.CommandParameter>
                            <x:Double>3.0</x:Double>
                        </Button.CommandParameter>
                    </Button>
                    <Button 
                        Grid.Row="1" Grid.Column="0"
                        Text="5km"
                        Command="{Binding ChangeRadiusCommand}"
                        BackgroundColor="{Binding CurrentRadius, Converter={StaticResource RadiusToColorConverter}, ConverterParameter=5}"
                        TextColor="White"
                        FontSize="14"
                        Padding="10,8">
                        <Button.CommandParameter>
                            <x:Double>5.0</x:Double>
                        </Button.CommandParameter>
                    </Button>
                    <Button 
                        Grid.Row="1" Grid.Column="1"
                        Text="전체"
                        Command="{Binding ShowAllCommand}"
                        BackgroundColor="{Binding CurrentRadius, Converter={StaticResource RadiusToColorConverter}, ConverterParameter=0}"
                        TextColor="White"
                        FontSize="14"
                        Padding="10,8" />
                </Grid>
            </VerticalStackLayout>

            <!-- Filter Status -->
            <Frame 
                Grid.Row="3"
                BackgroundColor="{StaticResource PrimaryCTA}"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10"
                BorderColor="Transparent">
                <Label
                    Text="{Binding FilterStatusText}"
                    Style="{StaticResource BodyText}"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center" />
            </Frame>

            <!-- Users CollectionView -->
            <CollectionView
                Grid.Row="4"
                ItemsSource="{Binding DisplayUsers}"
                BackgroundColor="{StaticResource BackgroundDeepNavy}"
                HeightRequest="200">
                <CollectionView.Header>
                    <Label 
                        Text="{Binding DisplayUsers.Count, StringFormat='이용자 목록 ({0}명)'}"
                        Style="{StaticResource SmallText}"
                        FontAttributes="Bold"
                        Padding="10,10,10,5" />
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Person">
                        <Frame 
                            Padding="12"
                            Margin="5,4"
                            CornerRadius="8"
                            BorderColor="{StaticResource TextTertiary}"
                            BackgroundColor="{StaticResource SurfaceDarkGray}"
                            HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MapViewModel}}, Path=ShowPersonDetailCommand}"
                                    CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                                <!-- Blue Circle Icon (User Marker) -->
                                <BoxView 
                                    Grid.Row="0" Grid.Column="0"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    CornerRadius="8"
                                    Color="{StaticResource UserMarker}"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0" />
                                
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Spacing="4">
                                    <Label 
                                        Text="{Binding Name}"
                                        Style="{StaticResource Heading2}"
                                        FontSize="16" />
                                    <Label 
                                        Text="{Binding Address}"
                                        Style="{StaticResource SmallText}"
                                        FontSize="12" />
                                    <Label 
                                        Text="{Binding Phone}"
                                        Style="{StaticResource CaptionText}"
                                        IsVisible="{Binding Phone, Converter={StaticResource IsNotNullConverter}}" />
                                </VerticalStackLayout>

                                <!-- Distance (shown in Assistant mode) -->
                                <Label 
                                    Grid.Row="0" Grid.Column="2"
                                    Text="{Binding DistanceKm, StringFormat='{0:F1}km'}"
                                    Style="{StaticResource CaptionText}"
                                    FontAttributes="Bold"
                                    TextColor="{StaticResource PrimaryCTA}"
                                    VerticalOptions="Center"
                                    IsVisible="{Binding DistanceKm, Converter={StaticResource IsNotNullConverter}}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Assistants CollectionView -->
            <CollectionView
                Grid.Row="5"
                ItemsSource="{Binding DisplayAssistants}"
                BackgroundColor="{StaticResource BackgroundDeepNavy}">
                <CollectionView.Header>
                    <Label 
                        Text="{Binding DisplayAssistants.Count, StringFormat='활동지원사 목록 ({0}명)'}"
                        Style="{StaticResource SmallText}"
                        FontAttributes="Bold"
                        Padding="10,10,10,5" />
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Person">
                        <Frame 
                            Padding="12"
                            Margin="5,4"
                            CornerRadius="8"
                            BorderColor="{StaticResource TextTertiary}"
                            BackgroundColor="{StaticResource SurfaceDarkGray}"
                            HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MapViewModel}}, Path=ShowPersonDetailCommand}"
                                    CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                                <!-- Orange Square Icon (Assistant Marker) -->
                                <BoxView 
                                    Grid.Row="0" Grid.Column="0"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    Color="{StaticResource AssistantMarker}"
                                    VerticalOptions="Center"
                                    Margin="0,0,10,0" />
                                
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Spacing="4">
                                    <Label 
                                        Text="{Binding Name}"
                                        Style="{StaticResource Heading2}"
                                        FontSize="16" />
                                    <Label 
                                        Text="{Binding Address}"
                                        Style="{StaticResource SmallText}"
                                        FontSize="12" />
                                    <Label 
                                        Text="{Binding Phone}"
                                        Style="{StaticResource CaptionText}"
                                        IsVisible="{Binding Phone, Converter={StaticResource IsNotNullConverter}}" />
                                </VerticalStackLayout>

                                <!-- Distance (if filtered) -->
                                <Label 
                                    Grid.Row="0" Grid.Column="2"
                                    Text="{Binding DistanceKm, StringFormat='{0:F1}km'}"
                                    Style="{StaticResource CaptionText}"
                                    FontAttributes="Bold"
                                    TextColor="{StaticResource PrimaryCTA}"
                                    VerticalOptions="Center"
                                    IsVisible="{Binding DistanceKm, Converter={StaticResource IsNotNullConverter}}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label 
                        Text="이용자를 선택하고 반경을 설정하세요"
                        Style="{StaticResource SmallText}"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="20" />
                </CollectionView.EmptyView>
            </CollectionView>

        </Grid>

        <!-- Right Panel (70%): Map WebView -->
        <Grid Grid.Column="1" BackgroundColor="{StaticResource BackgroundDeepNavy}">
            <WebView 
                x:Name="MapWebView"
                BackgroundColor="{StaticResource SurfaceDarkGray}"
                Source="map.html" />

            <!-- Info Overlay (Right Bottom) -->
            <Frame 
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                Padding="12"
                BackgroundColor="#B0000000"
                CornerRadius="8"
                BorderColor="Transparent"
                HasShadow="False">
                <VerticalStackLayout Spacing="6">
                    <Label 
                        Style="{StaticResource SmallText}" 
                        FontAttributes="Bold"
                        TextColor="White">
                        <Label.Text>
                            <MultiBinding StringFormat="모드: {0}">
                                <Binding Path="CurrentCenterMode" Converter="{StaticResource CenterModeToKoreanConverter}" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                    <Label 
                        Text="{Binding CurrentRadius, StringFormat='반경: {0}km'}" 
                        Style="{StaticResource SmallText}" 
                        TextColor="#DDDDDD" />
                    <BoxView HeightRequest="1" Color="#555555" Margin="0,3" />
                    <Label 
                        Text="{Binding UsersInRadius, StringFormat='이용자: {0}명'}" 
                        Style="{StaticResource SmallText}" 
                        TextColor="#60A5FA" />
                    <Label 
                        Text="{Binding AssistantsInRadius, StringFormat='지원사: {0}명'}" 
                        Style="{StaticResource SmallText}" 
                        TextColor="#FB923C" />
                </VerticalStackLayout>
            </Frame>

            <!-- Detail Panel (Slide-out from right) -->
            <Frame 
                IsVisible="{Binding IsDetailPanelVisible}"
                HorizontalOptions="End"
                VerticalOptions="Fill"
                WidthRequest="350"
                Padding="0"
                BackgroundColor="{StaticResource SurfaceDarkGray}"
                CornerRadius="12,0,0,12"
                BorderColor="{StaticResource PrimaryCTA}"
                HasShadow="True">
                <Grid RowDefinitions="Auto,*,Auto" Padding="20">
                    
                    <!-- Header -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                        <Label 
                            Grid.Column="0"
                            Text="상세 정보"
                            Style="{StaticResource Heading2}"
                            TextColor="{StaticResource PrimaryCTA}"
                            VerticalOptions="Center" />
                        <Button 
                            Grid.Column="1"
                            Text="✕"
                            Command="{Binding CloseDetailPanelCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource TextLightGray}"
                            FontSize="24"
                            Padding="10,0"
                            WidthRequest="40"
                            HeightRequest="40" />
                    </Grid>

                    <!-- Content -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="15" IsVisible="{Binding SelectedPerson, Converter={StaticResource IsNotNullConverter}}">
                            
                            <!-- Name -->
                            <VerticalStackLayout Spacing="5">
                                <Label 
                                    Text="이름"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="{Binding SelectedPerson.Name}"
                                    Style="{StaticResource Heading3}"
                                    TextColor="{StaticResource TextWhite}" />
                            </VerticalStackLayout>

                            <!-- Type -->
                            <VerticalStackLayout Spacing="5">
                                <Label 
                                    Text="유형"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="{Binding SelectedPerson.Type, Converter={StaticResource PersonTypeToKoreanConverter}}"
                                    Style="{StaticResource Body1}"
                                    TextColor="{StaticResource PrimaryCTA}" />
                            </VerticalStackLayout>

                            <!-- Address -->
                            <VerticalStackLayout Spacing="5">
                                <Label 
                                    Text="주소"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="{Binding SelectedPerson.Address}"
                                    Style="{StaticResource Body2}"
                                    TextColor="{StaticResource TextWhite}" />
                            </VerticalStackLayout>

                            <!-- Email -->
                            <VerticalStackLayout Spacing="5">
                                <Label 
                                    Text="이메일"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="{Binding SelectedPerson.Email}"
                                    Style="{StaticResource Body2}"
                                    TextColor="{StaticResource TextWhite}" />
                            </VerticalStackLayout>

                            <!-- Phone -->
                            <VerticalStackLayout Spacing="5">
                                <Label 
                                    Text="전화번호"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="{Binding SelectedPerson.Phone}"
                                    Style="{StaticResource Body2}"
                                    TextColor="{StaticResource TextWhite}" />
                            </VerticalStackLayout>

                            <!-- Experience (for Assistants) -->
                            <VerticalStackLayout Spacing="5" IsVisible="{Binding SelectedPerson.ExperienceYears, Converter={StaticResource IsNotNullConverter}}">
                                <Label 
                                    Text="경력"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="{Binding SelectedPerson.ExperienceYears, StringFormat='{0}년'}"
                                    Style="{StaticResource Body2}"
                                    TextColor="{StaticResource TextWhite}" />
                            </VerticalStackLayout>

                            <!-- Vehicle (for Assistants) -->
                            <VerticalStackLayout Spacing="5" IsVisible="{Binding SelectedPerson.HasVehicle}">
                                <Label 
                                    Text="차량 보유"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="✓ 있음"
                                    Style="{StaticResource Body2}"
                                    TextColor="{StaticResource AccentSecondary}" />
                            </VerticalStackLayout>

                            <!-- Distance (if filtered) -->
                            <VerticalStackLayout Spacing="5" IsVisible="{Binding SelectedPerson.Distance, Converter={StaticResource IsNotNullConverter}}">
                                <Label 
                                    Text="거리"
                                    Style="{StaticResource Caption}"
                                    TextColor="{StaticResource TextLightGray}" />
                                <Label 
                                    Text="{Binding SelectedPerson.Distance, StringFormat='{0:F2}km'}"
                                    Style="{StaticResource Body2}"
                                    TextColor="{StaticResource PrimaryCTA}" />
                            </VerticalStackLayout>

                        </VerticalStackLayout>
                    </ScrollView>

                    <!-- Footer Actions -->
                    <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,15,0,0">
                        <Button 
                            Text="상세 정보 편집"
                            Command="{Binding EditPersonDetailsCommand}"
                            BackgroundColor="{StaticResource PrimaryCTA}"
                            TextColor="{StaticResource TextWhite}"
                            CornerRadius="8"
                            Padding="15,12" />
                        <Button 
                            Text="닫기"
                            Command="{Binding CloseDetailPanelCommand}"
                            BackgroundColor="{StaticResource SurfaceDarkNavy}"
                            TextColor="{StaticResource TextLightGray}"
                            CornerRadius="8"
                            Padding="15,12" />
                    </VerticalStackLayout>

                </Grid>
            </Frame>

            <!-- Loading Overlay -->
            <ActivityIndicator
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                Color="{StaticResource PrimaryCTA}"
                WidthRequest="50"
                HeightRequest="50"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Grid>

    </Grid>

</ContentPage>
