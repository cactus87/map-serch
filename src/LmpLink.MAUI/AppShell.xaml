<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LmpLink.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:LmpLink.MAUI.Views.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True"
    Shell.TabBarBackgroundColor="{StaticResource SurfaceDarkGray}"
    Shell.TabBarForegroundColor="{StaticResource TextWhite}"
    Shell.TabBarTitleColor="{StaticResource PrimaryCTA}"
    Shell.TabBarUnselectedColor="{StaticResource TextLightGray}">

    <TabBar>
        <ShellContent
            Title="지도"
            ContentTemplate="{DataTemplate pages:MapPage}"
            Route="MapPage" />

        <ShellContent
            Title="관리"
            ContentTemplate="{DataTemplate pages:ManagementPage}"
            Route="ManagementPage" />

        <ShellContent
            Title="데이터"
            ContentTemplate="{DataTemplate pages:DataPage}"
            Route="DataPage" />

        <ShellContent
            Title="설정"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>

